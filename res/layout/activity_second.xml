<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SecondActivity" >

    <TextView
        android:id="@+id/sec_timetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/sec_img_map"
        android:text="WED,26 July 11:00am-12:30pm"
        android:textSize="15dip" />

    <ImageView
        android:id="@+id/sec_img_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/sec_timetext"
        android:src="@drawable/task32" />

    <TextView
        android:id="@+id/sec_roomtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sec_img_map"
        android:layout_alignLeft="@+id/sec_timetext"
        android:layout_below="@+id/sec_timetext"
        android:layout_toLeftOf="@+id/sec_img_map"
        android:singleLine="false"
        android:text="BallroomA(180)"
        android:textColor="#CCCCCC" />

    <TextView
        android:id="@+id/sec_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/sec_img_map"
        android:layout_below="@+id/sec_roomtext"
        android:text="Session 2-1: Social Media and E-Commerce"
        android:textColor="#7D181C"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/sec_blank"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignLeft="@+id/sec_title"
        android:layout_alignRight="@+id/sec_title"
        android:layout_below="@+id/sec_title" />
    
    <ListView
        android:id="@+id/secListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sec_title"
        android:layout_below="@+id/sec_blank" >
    </ListView>


</RelativeLayout>
